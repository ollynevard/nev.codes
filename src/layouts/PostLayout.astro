---
import Layout from './BaseLayout.astro';

interface Image {
  url: string;
  alt: string;
}

interface Frontmatter {
  title: string;
  description?: string;
  publishedOn: string;
  image?: Image;
  tags?: string[];
}

const frontmatter: Frontmatter = Astro.props.frontmatter;
const { title, publishedOn, description, image, tags } = frontmatter;

const dateOptions: object = {
	year: "numeric",
	month: "long",
	day: "numeric",
};

const publishedOnFormatted = new Date(publishedOn).toLocaleDateString(
	"en-GB",
	dateOptions
);
---

<Layout title={title} description={description}>
  <p>Published on: {publishedOnFormatted}</p>
  {image && <img src={image.url} width="300" alt={image.alt} />}

  {tags && <div class="tags">
    {tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>}
  <slot />
</Layout>

<style>
  a {
    color: #00539F;
  }
            
  .tags {
    display: flex; 
    flex-wrap: wrap; 
    margin: 0 auto;  
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>

